{
  "info": {
    "name": "OMM Server - Admin Member Management Testing",
    "description": "Complete Postman collection for testing admin member credentials and JWT authentication",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8080",
      "type": "string"
    },
    {
      "key": "admin_jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "member_jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "admin_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "member_id",
      "value": "",
      "type": "string"
    },
    {
      "key": "member_user_id",
      "value": "123456",
      "type": "string"
    },
    {
      "key": "admin_email",
      "value": "admin@example.com",
      "type": "string"
    },
    {
      "key": "admin_password",
      "value": "AdminPass123",
      "type": "string"
    },
    {
      "key": "member_password",
      "value": "MemberPass123",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Admin Signup",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{admin_email}}\",\n  \"password\": \"{{admin_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/signup",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "signup"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has success status\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql(true);",
              "});",
              "",
              "pm.test(\"Response contains OTP\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.have.property('otp');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "2. Verify Admin OTP (Get Admin JWT)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"{{admin_email}}\",\n  \"otp\": \"1234\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/auth/verify-otp",
          "host": ["{{base_url}}"],
          "path": ["api", "auth", "verify-otp"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has success status\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.status).to.eql(true);",
              "});",
              "",
              "pm.test(\"Response contains JWT token\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.have.property('token');",
              "    ",
              "    // Store JWT token and admin ID",
              "    pm.collectionVariables.set(\"admin_jwt_token\", jsonData.data.token);",
              "    pm.collectionVariables.set(\"admin_id\", jsonData.data.id);",
              "});",
              "",
              "pm.test(\"JWT token is valid format\", function () {",
              "    var jsonData = pm.response.json();",
              "    var token = jsonData.data.token;",
              "    pm.expect(token).to.match(/^eyJ/); // JWT tokens start with 'eyJ'",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "3. Create Member (Admin Action)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_jwt_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"adminId\": \"{{admin_id}}\",\n  \"userId\": \"{{member_user_id}}\",\n  \"password\": \"{{member_password}}\",\n  \"firstName\": \"John\",\n  \"lastName\": \"Doe\",\n  \"email\": \"john.doe@example.com\",\n  \"mobile\": \"9876543210\",\n  \"floor\": 5,\n  \"flatNo\": \"501\",\n  \"parkingArea\": \"P1\",\n  \"parkingSlot\": \"S5\",\n  \"govtIdType\": \"Aadhaar\",\n  \"govtIdImage\": \"data:image/jpeg;base64,\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/admin-members/create",
          "host": ["{{base_url}}"],
          "path": ["api", "admin-members", "create"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 201\", function () {",
              "    pm.response.to.have.status(201);",
              "});",
              "",
              "pm.test(\"Response has success status\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.eql(true);",
              "});",
              "",
              "pm.test(\"Response contains member data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.have.property('member');",
              "    ",
              "    // Store member ID",
              "    pm.collectionVariables.set(\"member_id\", jsonData.data.member.id);",
              "});",
              "",
              "pm.test(\"Authorization header is present\", function () {",
              "    pm.expect(pm.request.headers.get('Authorization')).to.contain('Bearer');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "4. Member Login (Get Member JWT)",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"userId\": \"{{member_user_id}}\",\n  \"password\": \"{{member_password}}\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/admin-members/member-login",
          "host": ["{{base_url}}"],
          "path": ["api", "admin-members", "member-login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has success status\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.eql(true);",
              "});",
              "",
              "pm.test(\"Response contains JWT token\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.have.property('token');",
              "    ",
              "    // Store member JWT token",
              "    pm.collectionVariables.set(\"member_jwt_token\", jsonData.data.token);",
              "});",
              "",
              "pm.test(\"Response contains member data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.have.property('member');",
              "    pm.expect(jsonData.data.member).to.have.property('userId');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "5. Get Members by Admin",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin-members/admin/{{admin_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "admin-members", "admin", "{{admin_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has success status\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.eql(true);",
              "});",
              "",
              "pm.test(\"Response contains members array\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.be.an('array');",
              "});",
              "",
              "pm.test(\"Authorization header is present\", function () {",
              "    pm.expect(pm.request.headers.get('Authorization')).to.contain('Bearer');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "6. Update Member (Admin Action)",
      "request": {
        "method": "PUT",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_jwt_token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"firstName\": \"John Updated\",\n  \"lastName\": \"Doe Updated\",\n  \"mobile\": \"9999999999\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/admin-members/admin/{{admin_id}}/member/{{member_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "admin-members", "admin", "{{admin_id}}", "member", "{{member_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has success status\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.eql(true);",
              "});",
              "",
              "pm.test(\"Response contains updated member data\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.data).to.have.property('firstName', 'John Updated');",
              "});",
              "",
              "pm.test(\"Authorization header is present\", function () {",
              "    pm.expect(pm.request.headers.get('Authorization')).to.contain('Bearer');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "7. Delete Member (Admin Action)",
      "request": {
        "method": "DELETE",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{admin_jwt_token}}"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin-members/admin/{{admin_id}}/member/{{member_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "admin-members", "admin", "{{admin_id}}", "member", "{{member_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response has success status\", function () {",
              "    var jsonData = pm.response.json();",
              "    pm.expect(jsonData.success).to.eql(true);",
              "});",
              "",
              "pm.test(\"Authorization header is present\", function () {",
              "    pm.expect(pm.request.headers.get('Authorization')).to.contain('Bearer');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "8. Test Invalid Admin Token",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer invalid.admin.token"
          }
        ],
        "url": {
          "raw": "{{base_url}}/api/admin-members/admin/{{admin_id}}",
          "host": ["{{base_url}}"],
          "path": ["api", "admin-members", "admin", "{{admin_id}}"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 403 (Forbidden) for invalid token\", function () {",
              "    pm.response.to.have.status(403);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "9. Test Missing Authorization Header",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"adminId\": \"{{admin_id}}\",\n  \"userId\": \"654321\",\n  \"password\": \"NewMember123\",\n  \"firstName\": \"Jane\",\n  \"lastName\": \"Smith\",\n  \"email\": \"jane.smith@example.com\",\n  \"mobile\": \"9876543211\",\n  \"floor\": 3,\n  \"flatNo\": \"301\",\n  \"govtIdType\": \"PAN\",\n  \"govtIdImage\": \"data:image/jpeg;base64,\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/api/admin-members/create",
          "host": ["{{base_url}}"],
          "path": ["api", "admin-members", "create"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status code is 401 (Unauthorized) for missing token\", function () {",
              "    pm.response.to.have.status(401);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
  ]
}